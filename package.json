{
	"name": "vertical-timeline-component-react",
	"version": "3.0.4",
	"description": "A simple component for create a vertical timeline with React",
	"main": "./lib/cjs/index.js",
	"module": "./lib/esm/index.js",
	"types": "./lib/esm/index.d.ts",
	"files": [
		"/lib"
	],
	"repository": "https://github.com/Proskynete/vertical-timeline-component-react",
	"author": {
		"name": "Eduardo Esteban Álvarez Castañeda",
		"email": "soy@eduardoalvarez.dev",
		"url": "https://eduardoalvarez.dev"
	},
	"license": "MIT",
	"scripts": {
		"build": "npm run build:esm && npm run build:cjs",
		"build:esm": "tsc",
		"build:cjs": "tsc --module commonjs --outDir lib/cjs",
		"lint": "eslint . --ext .ts ./src",
		"lint:fix": "eslint . --ext .ts ./src --fix",
		"prettier:check": "prettier --check ./src/**/*",
		"prettier:format": "prettier --config .prettierrc --write ./src/**/*",
		"test": "jest && npm run test:coverage",
		"test:update-snapshots": "jest --updateSnapshot",
		"test:coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls",
		"test:coverage": "jest --coverage",
		"test:watch": "jest --watchAll",
		"prepare": "husky install"
	},
	"keywords": [
		"React",
		"React.js",
		"TypeScript",
		"Vertical Timeline",
		"Vertical Timeline Component React"
	],
	"peerDependencies": {
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"typescript": "^4.4.4"
	},
	"dependencies": {
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"styled-components": "^5.2.1",
		"typescript": "^4.4.4"
	},
	"devDependencies": {
		"@types/enzyme": "^3.10.10",
		"@types/jest": "^27.0.2",
		"@types/prettier": "^2.4.2",
		"@types/react": "^17.0.31",
		"@types/react-dom": "^17.0.10",
		"@types/react-test-renderer": "^17.0.1",
		"@types/styled-components": "^5.1.24",
		"@typescript-eslint/eslint-plugin": "^5.4.0",
		"@typescript-eslint/parser": "^5.4.0",
		"@wojtekmaj/enzyme-adapter-react-17": "^0.6.5",
		"coveralls": "^3.1.1",
		"enzyme": "^3.11.0",
		"eslint-config-airbnb-typescript": "^16.0.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^8.0.1",
		"jest": "^27.3.1",
		"prettier": "^2.5.0",
		"react-test-renderer": "^17.0.2",
		"ts-jest": "^27.0.7"
	}
}
